@model LibraryManager.ViewModels.BookFormViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.HeadingTitle</h2>

@using (Html.BeginForm("Save", "Books"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control"})
        @Html.ValidationMessageFor(m => m.Title)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AuthorFirstName)
        @Html.TextBoxFor(m => m.AuthorFirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.AuthorFirstName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AuthorLastName)
        @Html.TextBoxFor(m => m.AuthorLastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.AuthorLastName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PublishDate)
        @Html.TextBoxFor(m => m.PublishDate,  new { @class = "form-control"})
        @Html.ValidationMessageFor(m => m.PublishDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GenreId)
        @Html.DropDownListFor(m => m.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select a Genre", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.GenreId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NumberInStock)
        @Html.TextBoxFor(m => m.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NumberInStock)
    </div>
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type ="submit" class="btn btn-lg btn-success">Submit</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}




